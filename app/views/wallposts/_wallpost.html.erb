<li>
  <span class="content"><%= wallpost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(wallpost.created_at) %> ago.
  </span>
  <% if current_user?(wallpost.user) or current_user.admin? %>
    <%= link_to "delete", wallpost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: wallpost.content %>
  <% end %>
</li>