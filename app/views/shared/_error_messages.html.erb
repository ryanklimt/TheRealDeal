<% if object.errors.any? %>
    <div class="alert alert-danger"> 
    <p>The form contains <%= pluralize(object.errors.count, "error") %>.</p>
    </div>
    <ul>
      <% object.errors.full_messages.each do |message| %>
      <li class="text-danger"> <%= message %> </li>
      <% end %>
    </ul>
<% end %>