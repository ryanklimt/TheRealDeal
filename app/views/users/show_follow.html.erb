<% @title = @t %>
<div class="row">
  <aside class="span4">
    <section>
      <%= link_to gravatar_for(@user), user_path(@user.username) %>
      <h1><%= @user.username %></h1>
      <span><%= link_to 'view my profile', user_path(@user.username) %></span>
      <span><b>Posts</b> <%= @user.wallposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, 40), user_path(user.username) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>