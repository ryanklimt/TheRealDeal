<li>
  <%= link_to gravatar_for(user), user_path(user.username) %>
  <%= link_to user.username, user_path(user.username) %>
  <% if current_user.admin? && !current_user?(user) && !user.admin? %>
      | <%= link_to "delete", user_path(user.username), method: :delete, data: { confirm: "You sure you want to delete #{user.username}?" } %>
  <% end %>
</li>